---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: speedtest
spec:
  replicas: 2
  selector:
    matchLabels:
      app: speedtest
  template:
    metadata:
      labels:
        app: speedtest
    spec:
      containers:
      - name: speedtest
        image: adolfintel/speedtest
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: speedtest
  namespace: default
spec:
  externalTrafficPolicy: Cluster
  ports:
  - port: 80
    protocol: TCP
  selector:
    app: speedtest
  type: LoadBalancer
